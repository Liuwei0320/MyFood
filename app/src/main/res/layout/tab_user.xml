<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud">


    <TextView
        android:text="用户信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView23"
        android:layout_alignStart="@+id/u_adress"
        android:id="@+id/u_intro"
        android:textSize="18sp" />

    <TextView
        android:text="地址："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textView19"
        android:textSize="20sp"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:text="电话："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView17"
        android:textSize="20sp"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/u_tele"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignStart="@+id/u_name" />

    <TextView
        android:text="用户："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:layout_below="@+id/textView11"
        android:layout_toStartOf="@+id/u_comment"
        android:layout_marginEnd="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/u_name"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignStart="@+id/u_comment" />

    <TextView
        android:text="备注："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/textView23"
        android:textSize="20sp"
        android:layout_below="@+id/textView19"
        android:layout_alignStart="@+id/textView19" />

    <Button
        android:text="查看订单"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/u_order"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/shape_button"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/textView23"
        android:layout_alignEnd="@+id/textView23"
        android:layout_marginEnd="12dp" />

    <Button
        android:text="查看评论"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/u_comment"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/shape_button"
        android:layout_alignTop="@+id/u_order"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/u_adress"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignStart="@+id/u_tele" />

    <Button
        android:text="修改信息"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/u_edit"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/shape_button"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/u_comment"
        android:layout_alignBottom="@+id/u_comment"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
