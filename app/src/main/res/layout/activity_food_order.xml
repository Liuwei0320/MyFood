<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_food_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroud"
    tools:context="com.example.liuwei112.Ordering.activity.FoodOrderActivity">

    <TextView
        android:text="确定订单："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:id="@+id/buy_name"
        android:textSize="18sp" />

    <TextView
        android:text="配送地址："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="24dp"
        android:id="@+id/textView12"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buy_adress"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/buy_name"
        android:textSize="18sp" />


    <TextView
        android:text="菜品名："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:id="@+id/textView20"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignStart="@+id/buy_time"
        android:id="@+id/buy_foodname"
        android:textSize="18sp" />

    <TextView
        android:text="购买数量："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_alignStart="@+id/textView20"
        android:layout_marginTop="20dp"
        android:id="@+id/textView22"
        android:textSize="18sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/remove"
        android:id="@+id/buy_remove"
        android:layout_alignTop="@+id/textView22"
        android:layout_alignStart="@+id/buy_foodname"
        style="@android:style/Widget.Holo.Light.ImageButton" />

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView26"
        android:layout_toEndOf="@+id/textView26"
        android:id="@+id/buy_price"
        android:textSize="20sp" />

    <TextView
        android:text="总价："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textView25"
        android:textSize="20sp"
        android:layout_below="@+id/buy_remove"
        android:layout_alignStart="@+id/textView22" />

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buy_num"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/buy_add"
        android:layout_alignEnd="@+id/buy_buy" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        android:id="@+id/buy_add"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/buy_remove"
        android:layout_toEndOf="@+id/buy_num"
        android:layout_marginStart="22dp" />

    <TextView
        android:text="用户电话："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:textSize="18sp" />

    <Button
        android:text="提交订单"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/buy_buy"
        android:background="@drawable/shape_button"
        android:layout_width="100dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="35dp"
        android:src="@drawable/ic_store"
        android:id="@+id/imageView2"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buy_tele"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignStart="@+id/buy_time" />

    <TextView
        android:text="店铺名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buy_shopname"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView20" />

    <TextView
        android:text="购买人："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="11dp"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:text="送达时间："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView15"
        android:textSize="18sp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <EditText

        android:id="@+id/buy_time"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignStart="@+id/buy_adress" />

    <TextView
        android:text="￥"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView26"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView25"
        android:layout_alignBottom="@+id/textView25"
        android:layout_alignStart="@+id/buy_remove" />


</RelativeLayout>
