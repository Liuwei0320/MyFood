<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_food_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liuwei112.Ordering.activity.FoodDetailActivity"
    android:background="@drawable/backgroud">

    <TextView
        android:text="简介："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jianjie"
        android:layout_alignBaseline="@+id/f_intro"
        android:layout_alignBottom="@+id/f_intro"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:textStyle="normal|bold"
        android:textColor="#6600FF"
        android:textSize="18sp" />

    <TextView
        android:text="22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:id="@+id/f_price"
        android:textStyle="normal|bold"
        android:textColor="#FF0099"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:text="￥"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="#FF0099"
        android:layout_alignBottom="@+id/f_collected"
        android:layout_toEndOf="@+id/f_img"
        android:layout_marginStart="12dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/collected_1"
        android:id="@+id/f_collected"
        style="@android:style/Widget.ImageButton"
        android:background="@color/colorC"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/f_intro" />

    <TextView
        android:text="菜品名称"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/f_name"
        android:textSize="26sp"
        android:textColor="#0099FF"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/f_img"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/f_price"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="购买"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/f_buy"
        android:background="@drawable/shape_button"
        android:layout_height="35dp"
        android:layout_width="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="查看评论"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/f_comment"
        android:background="@drawable/shape_button"
        android:layout_height="35dp"
        android:layout_width="90dp"
        android:layout_above="@+id/f_buy"
        android:layout_alignStart="@+id/f_buy"
        android:layout_marginBottom="18dp" />

    <TextView
        android:text="简介内容"
        android:layout_height="wrap_content"
        android:id="@+id/f_intro"
        android:minLines="5"
        android:maxLines="8"
        android:layout_width="255dp"
        android:textColor="#6600FF"
        android:textSize="16sp"
        android:layout_below="@+id/f_img"
        android:layout_toEndOf="@+id/jianjie" />

</RelativeLayout>
