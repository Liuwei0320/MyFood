<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insert_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroud"
    tools:context="com.example.liuwei112.Ordering.activity.InsertCommentActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:textSize="22sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_name"
        android:layout_toEndOf="@+id/ic_name"
        android:layout_marginTop="17dp"
        android:id="@+id/ic_time" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="请输入评论内容。。"
        android:textColorHint="#003cff"
        android:ems="10"
        android:gravity="top"
        android:layout_marginTop="33dp"
        android:id="@+id/ic_intro"
        android:layout_below="@+id/ic_time"
        android:minLines="5"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/ic_back"
        android:background="@drawable/shape_button"
        android:layout_width="100dp"
        android:layout_marginBottom="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/ic_name" />

    <Button
        android:text="发表"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/ic_ok"
        android:background="@drawable/shape_button"
        android:layout_width="100dp"
        android:layout_alignBaseline="@+id/ic_back"
        android:layout_alignBottom="@+id/ic_back"
        android:layout_alignStart="@+id/ic_time"
        android:layout_marginStart="10dp" />
</RelativeLayout>
